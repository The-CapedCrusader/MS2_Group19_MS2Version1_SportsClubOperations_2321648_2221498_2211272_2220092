<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cse213.cse213_sporting_club_operations.TanvirMahmud.HCGoal3">
    <top>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #1a237e;">
            <children>
                <Label text="Match Tactical Strategy" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.6" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <!-- Left side - Match and tactical details -->
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <!-- Match details section -->
                        <TitledPane animated="false" text="Match Details">
                            <content>
                                <GridPane hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Opponent" />
                                        <ComboBox fx:id="opponentComboBox" prefWidth="250.0" GridPane.columnIndex="1" />
                                        <Label text="Date" GridPane.rowIndex="1" />
                                        <DatePicker fx:id="matchDatePicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Venue" GridPane.rowIndex="2" />
                                        <ComboBox fx:id="venueComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Label text="Competition" GridPane.rowIndex="3" />
                                        <ComboBox fx:id="competitionComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <Label text="Formation" GridPane.rowIndex="4" />
                                        <ComboBox fx:id="formationComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <!-- Tactical options section -->
                        <TitledPane animated="false" text="Tactical Options">
                            <content>
                                <GridPane hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Pressing Style" />
                                        <ComboBox fx:id="pressingStyleComboBox" prefWidth="250.0" GridPane.columnIndex="1" />
                                        <Label text="Attacking Style" GridPane.rowIndex="1" />
                                        <ComboBox fx:id="attackingStyleComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </GridPane>
                            </content>
                        </TitledPane>

                        <!-- Player roles section -->
                        <TitledPane animated="false" text="Player Roles" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox spacing="10.0">
                                    <children>
                                        <TableView fx:id="playerRolesTable" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="playerNameColumn" prefWidth="120.0" text="Player" />
                                                <TableColumn fx:id="positionColumn" prefWidth="80.0" text="Position" />
                                                <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role" />
                                                <TableColumn fx:id="instructionsColumn" prefWidth="200.0" text="Instructions" />
                                            </columns>
                                        </TableView>
                                        <HBox spacing="10.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#addPlayerRole" text="Add Player Role" />
                                                <Button mnemonicParsing="false" onAction="#removePlayerRole" text="Remove Selected" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>

                        <!-- Tactical notes section -->
                        <TitledPane animated="false" text="Tactical Notes" VBox.vgrow="ALWAYS">
                            <content>
                                <TextArea fx:id="tacticalNotesArea" prefHeight="100.0" wrapText="true" />
                            </content>
                        </TitledPane>
                    </children>
                </VBox>

                <!-- Right side - Saved strategies -->
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Saved Tactical Strategies">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TableView fx:id="savedStrategiesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="strategyNameColumn" prefWidth="150.0" text="Strategy Name" />
                                <TableColumn fx:id="opponentColumn" prefWidth="100.0" text="Opponent" />
                                <TableColumn fx:id="dateColumn" prefWidth="80.0" text="Date" />
                                <TableColumn fx:id="formationColumn" prefWidth="70.0" text="Formation" />
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#saveStrategy" prefWidth="120.0" text="Save Strategy" />
                                <Button mnemonicParsing="false" onAction="#deleteStrategy" prefWidth="120.0" text="Delete Strategy" />
                                <Button mnemonicParsing="false" onAction="#clearForm" prefWidth="120.0" text="Clear Form" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #e0e0e0;">
            <children>
                <Button mnemonicParsing="false" onAction="#dashboard" prefHeight="30.0" prefWidth="200.0" text="Back to Dashboard" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>