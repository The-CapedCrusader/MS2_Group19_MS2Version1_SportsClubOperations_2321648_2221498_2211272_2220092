<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="cse213.cse213_sporting_club_operations.TanvirMahmud.HCGoal3">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Tactical Strategy Planning" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <Button text="Back to Dashboard" onAction="#dashboard"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.7">
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <!-- Match details section -->
                <TitledPane text="Match Details" expanded="true">
                    <VBox spacing="10">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Opponent:"/>
                            <ComboBox fx:id="opponentComboBox" prefWidth="200"/>
                        </HBox>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Match Date:"/>
                            <DatePicker fx:id="matchDatePicker"/>
                        </HBox>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Formation:"/>
                            <ComboBox fx:id="formationComboBox" prefWidth="150"/>
                        </HBox>
                    </VBox>
                </TitledPane>

                <!-- Tactics section -->
                <TitledPane text="Tactical Approach" expanded="true">
                    <VBox spacing="10">
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Pressing Style:"/>
                            <ComboBox fx:id="pressingStyleComboBox" prefWidth="150"/>
                        </HBox>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Defensive Line:"/>
                            <ComboBox fx:id="defensiveLineComboBox" prefWidth="150"/>
                        </HBox>
                        <Label text="Tactical Notes:"/>
                        <TextArea fx:id="tacticalNotesArea" prefHeight="100"/>
                    </VBox>
                </TitledPane>

                <!-- Player assignments section -->
                <TitledPane text="Player Assignments" expanded="true" VBox.vgrow="ALWAYS">
                    <VBox spacing="10">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button text="Edit Player Role" onAction="#editPlayerRole"/>
                            <Label fx:id="lastTrainingSessionLabel" style="-fx-font-style: italic;"/>
                        </HBox>
                        <TableView fx:id="playerAssignmentsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="playerNameColumn" text="Player" prefWidth="150"/>
                                <TableColumn fx:id="positionColumn" text="Position" prefWidth="100"/>
                                <TableColumn fx:id="roleColumn" text="Role" prefWidth="150"/>
                            </columns>
                        </TableView>
                    </VBox>
                </TitledPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Save Strategy" onAction="#saveStrategy"/>
                </HBox>
            </VBox>

            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Saved Strategies" style="-fx-font-weight: bold;"/>
                <ListView fx:id="savedStrategiesListView" VBox.vgrow="ALWAYS"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>